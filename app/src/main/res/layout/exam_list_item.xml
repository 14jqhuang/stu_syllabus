<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/exam_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="考试时间"
                android:textColor="@android:color/holo_red_light" />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/exam_class_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="程序设计基础" />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/exam_location_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="考试地点" />

            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/sit_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="座位号" />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/exam_comment_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="备注信息"
                android:textColor="@android:color/holo_red_light" />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/tv_near_exam_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="right"
                android:hint="1天20小时34分钟59秒"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
